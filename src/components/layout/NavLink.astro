---
const { href, label, icon: Icon, class: className } = Astro.props;
const currentPath = new URL(Astro.request.url).pathname;

const linkClasses = [
  'flex items-center gap-4 text-sm text-neutral-500 hover:text-[rgb(91,207,218)] [&.is-active]:text-neutral-700 font-medium pl-5 py-1 border-l border-neutral-200 hover:border-neutral-400 [&.is-active]:border-[#69D3C6] transition duration-300 ease-in-out',
  className,
  href === currentPath ? 'is-active' : '',
];
---

<li style="border-radius: 7px;">
  <a class:list={[linkClasses]} href={href}>
    {Icon && <Icon size={18} />}
    <span>{label}</span>
  </a>
</li>