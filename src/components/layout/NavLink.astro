---
const { href, label, icon: Icon, class: className } = Astro.props;
const currentPath = new URL(Astro.request.url).pathname;

const linkClasses = [
  'flex items-center gap-4 text-sm text-neutral-500 hover:text-neutral-700 [&.is-active]:text-[#69D3C6] [&.is-active]:text-neutral-500 font-medium pl-5 py-1 border-l border-neutral-200 hover:border-neutral-400 [&.is-active]:border-[#69D3C6] transition duration-300 ease-in-out',
  className,
  href === currentPath ? 'is-active' : '',
];
---

<li style="border-radius: 7px;">
  <a class:list={[linkClasses]} href={href}>
    {Icon && <Icon size={18} />}
    <span>{label}</span>
  </a>
</li>