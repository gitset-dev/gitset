---
import { Code } from 'astro-expressive-code/components'

interface Props {
  frame?: 'none' | 'code' | 'terminal' | 'auto' | undefined
  lang?: string
  title?: string
  code: string
}

const { frame, title, lang, code } = Astro.props
---

<div
  class="bg-gradient-to-r from-[rgba(41,58,142,1)] to-[rgba(59,159,168)] appearance-none rounded-lg p-px"
>
  <div class="bg-neutral-100/90 text-neutral-500 rounded-lg overflow-clip">
    <Code frame={frame} title={title} lang={lang} code={code} />
  </div>
</div>
