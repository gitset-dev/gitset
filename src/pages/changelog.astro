---
import Header from '../components/layout/Header.astro'
import Layout from '../layouts/Layout.astro'
import Sidebar from '../layouts/Sidebar.astro'
import CTA from '../sections/CTA.astro'
import Footer from '../components/layout/Footer.astro'
---

<Layout title="Gitset - Changelog">
    <Sidebar />
    <div class="flex flex-col min-h-screen">
      <div class="hidden lg:block fixed w-64 h-full">
        <Sidebar />
      </div>
      
      <div class="flex-1 lg:ml-64 flex flex-col">
        <Header />
        <main class="flex-1 overflow-x-hidden overflow-y-auto bg-gray-50">
          <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-8 mt-8 top">
            <br />
            <div class="flex justify-center"></div>
            <CTA
              
              align="center"
              title={`<span id="cta-title"><strong>Changelog</strong></span>`}
              description={`
                <span id="cta-description">
                  Stay up to date with the latest features, improvements, and changes to Gitset ecosystem.
                </span>
              `}
            >

                <div class="flex justify-center mt-8 ">
                    <div class="shadow-lg rounded-lg p-6 max-w-4xl w-full overflow-y-auto max-h-96">
                        <div class="prose prose-lg text-neutral-700 !text-left">
                            
                            <h3 class="flex justify-center mx-auto my-0 text-center !text-neutral-700">Version 1.9.0 - MAJOR ARCHITECTURAL OVERHAUL</h3>
                            <p class="flex justify-center mx-auto my-0" style="font-size: 0.875rem; color: #919191; margin-bottom: 2rem;">Released: February 2025</p>
                        
                            <h4 class="!text-neutral-700">BREAKING CHANGES</h4>
                            <ul>
                                <li>● Complete migration from request-based to token-based usage system</li>
                                <li>● Database infrastructure moved from Supabase to Turso for limitations control</li>
                                <li>● Trial plan eliminated in favor of generous free token allocation</li>
                                <li>● New Enterprise subscription tier introduced</li>
                            </ul>

                            <h4 class="mt-8 mb-4 text-lg font-semibold text-neutral-700">NEW FEATURES</h4>
                            <div class="overflow-x-auto mb-6">
                                <table class="w-full border-collapse">
                                    <tbody>
                                        <tr class="border-b border-gray-100">
                                            <td class="py-3 pr-4 align-top">
                                                <strong class="text-neutral-700 font-medium">300,000 monthly free tokens</strong>
                                            </td>
                                            <td class="py-3 text-sm leading-relaxed" style="color: #919191;">
                                                30x improvement over previous 10 requests
                                            </td>
                                        </tr>
                                        <tr class="border-b border-gray-100">
                                            <td class="py-3 pr-4 align-top">
                                                <strong class="text-neutral-700 font-medium">Enterprise plan</strong>
                                            </td>
                                            <td class="py-3 text-sm leading-relaxed" style="color: #919191;">
                                                10,000,000 monthly tokens for organizational users
                                            </td>
                                        </tr>
                                        <tr class="border-b border-gray-100">
                                            <td class="py-3 pr-4 align-top">
                                                <strong class="text-neutral-700 font-medium">Templates for AI tools</strong>
                                            </td>
                                            <td class="py-3 text-sm leading-relaxed" style="color: #919191;">
                                                Public/Personal README Generators, Issues Crafter, and Pull Requests Maker now support custom templates for better consistency and development UX
                                            </td>
                                        </tr>
                                        <tr class="border-b border-gray-100">
                                            <td class="py-3 pr-4 align-top">
                                                <strong class="text-neutral-700 font-medium">Real-time token usage monitoring</strong>
                                            </td>
                                            <td class="py-3 text-sm leading-relaxed" style="color: #919191;">
                                                Analytics and tracking in dashboard
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="py-3 pr-4 align-top">
                                                <strong class="text-neutral-700 font-medium">Gitset MCP infrastructure preparation</strong>
                                            </td>
                                            <td class="py-3 text-sm leading-relaxed" style="color: #919191;">
                                                Foundation for upcoming local agent integration
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>

                            <h4>IMPROVEMENTS</h4>
                            <ul>
                                <li>● Granular token consumption based on operation complexity</li>
                                <li>● Transparent usage tracking across all 9 tools</li>
                                <li>● 3x faster limitation validation with Turso migration</li>
                                <li>● Updated pricing pages, FAQ, and terms reflecting new system</li>
                            </ul>

                            <h4>MIGRATION REQUIRED</h4>
                            <ul>
                                <li>● Database schema updates mandatory</li>
                                <li>● Environment variable configuration required</li>
                                <li>● User limitation data migration from Supabase to Turso</li>
                            </ul>

                            <div style="border-left: 4px solid #3DA798; padding: 1.5rem; margin: 2rem 0; border-radius: 0 0.5rem 0.5rem 0;">
                                <h4 style="margin-top: 0; color: #919191; font-size: 1.125rem;">What This Means for You</h4>
                                <p style="margin-bottom: 0; line-height: 1.6;">This architectural transformation represents a strategic shift toward a more scalable, user-friendly, and technically sound foundation. The elimination of restrictive limitations in favor of generous token allocations significantly improves user onboarding while preparing the infrastructure for Gitset MCP integration. The new system balances generous free access with sustainable scaling for enterprise users, positioning Gitset competitively in the AI development tools market.</p>
                            </div>

                            <h4>Token Usage Guide</h4>
                            <p>Understanding how tokens work across our tools:</p>
                            
                            <div style="padding: 1.5rem; border-radius: 0.5rem; margin: 1.5rem 0; overflow-x: auto;">
                                <div style="min-width: 600px;">
                                    <table style="width: 100%; border-collapse: collapse;">
                                        <thead>
                                            <tr style="border-bottom: 2px solid #E5E7EB;">
                                                <th style="text-align: left; padding: 0.75rem 0.5rem; font-weight: 600; color: #919191;">Tool</th>
                                                <th style="text-align: left; padding: 0.75rem 0.5rem; font-weight: 600; color: #919191;">Token Range</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td style="padding: 0.75rem 0.5rem; border-bottom: 1px solid #F3F4F6;">Dependencies Analysis</td>
                                                <td style="padding: 0.75rem 0.5rem; border-bottom: 1px solid #F3F4F6; color: #919191;">100-250 tokens</td>
                                            </tr>
                                            <tr>
                                                <td style="padding: 0.75rem 0.5rem; border-bottom: 1px solid #F3F4F6;">Commit Message Generation</td>
                                                <td style="padding: 0.75rem 0.5rem; border-bottom: 1px solid #F3F4F6; color: #919191;">500-2,000 tokens</td>
                                            </tr>
                                            <tr>
                                                <td style="padding: 0.75rem 0.5rem; border-bottom: 1px solid #F3F4F6;">Release Notes Generation</td>
                                                <td style="padding: 0.75rem 0.5rem; border-bottom: 1px solid #F3F4F6; color: #919191;">800-2,500 tokens</td>
                                            </tr>
                                            <tr>
                                                <td style="padding: 0.75rem 0.5rem; border-bottom: 1px solid #F3F4F6;">Issue Generation</td>
                                                <td style="padding: 0.75rem 0.5rem; border-bottom: 1px solid #F3F4F6; color: #919191;">1,200-3,400 tokens</td>
                                            </tr>
                                            <tr>
                                                <td style="padding: 0.75rem 0.5rem; border-bottom: 1px solid #F3F4F6;">README Generation</td>
                                                <td style="padding: 0.75rem 0.5rem; border-bottom: 1px solid #F3F4F6; color: #919191;">1,500-4,000 tokens</td>
                                            </tr>
                                            <tr>
                                                <td style="padding: 0.75rem 0.5rem; border-bottom: 1px solid #F3F4F6;">Pull Request Generation</td>
                                                <td style="padding: 0.75rem 0.5rem; border-bottom: 1px solid #F3F4F6; color: #919191;">1,500-3,500 tokens</td>
                                            </tr>
                                            <tr>
                                                <td style="padding: 0.75rem 0.5rem;">Code Decommenting</td>
                                                <td style="padding: 0.75rem 0.5rem; color: #919191;">3,900-5,000 tokens</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>

                            <div class="flex">
                                <p class="flex justify-center mx-auto my-0 text-center" style="font-size: 0.875rem; color: #919191; font-style: italic;">
                                    Note: Token consumption varies based on repository size, code complexity, and analysis depth. 
                                    For real-time quota monitoring, remaining tokens and session consumption will be displayed after each AI operation.
                                </p>
                            </div>
                            

                            <h4>New Subscription Plans</h4>
                            
                            <div style="padding: 1.5rem; border-radius: 0.5rem; margin: 1.5rem 0; overflow-x: auto;">
                                <div style="min-width: 500px;">
                                    <table style="width: 100%; border-collapse: collapse;">
                                        <thead>
                                            <tr style="border-bottom: 2px solid #E5E7EB;">
                                                <th style="text-align: left; padding: 0.75rem 0.5rem; font-weight: 600; color: #919191;">Plan</th>
                                                <th style="text-align: left; padding: 0.75rem 0.5rem; font-weight: 600; color: #919191;">Tokens/Month</th>
                                                <th style="text-align: left; padding: 0.75rem 0.5rem; font-weight: 600; color: #919191;">Approx. Requests</th>
                                                <th style="text-align: left; padding: 0.75rem 0.5rem; font-weight: 600; color: #919191;">Price</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td style="padding: 0.75rem 0.5rem; border-bottom: 1px solid #F3F4F6;"><strong>Basic</strong></td>
                                                <td style="padding: 0.75rem 0.5rem; border-bottom: 1px solid #F3F4F6; color: #919191;">300K</td>
                                                <td style="padding: 0.75rem 0.5rem; border-bottom: 1px solid #F3F4F6; color: #919191;">~120 requests</td>
                                                <td style="padding: 0.75rem 0.5rem; border-bottom: 1px solid #F3F4F6;"><strong style="color: #059669;">FREE</strong></td>
                                            </tr>
                                            <tr>
                                                <td style="padding: 0.75rem 0.5rem; border-bottom: 1px solid #F3F4F6;"><strong>Pro</strong></td>
                                                <td style="padding: 0.75rem 0.5rem; border-bottom: 1px solid #F3F4F6; color: #919191;">1M</td>
                                                <td style="padding: 0.75rem 0.5rem; border-bottom: 1px solid #F3F4F6; color: #919191;">~400 requests</td>
                                                <td style="padding: 0.75rem 0.5rem; border-bottom: 1px solid #F3F4F6; color: #919191;">$2.99/month</td>
                                            </tr>
                                            <tr>
                                                <td style="padding: 0.75rem 0.5rem;"><strong>Enterprise</strong></td>
                                                <td style="padding: 0.75rem 0.5rem; color: #919191;">10M</td>
                                                <td style="padding: 0.75rem 0.5rem; color: #919191;">~4,000 requests</td>
                                                <td style="padding: 0.75rem 0.5rem; color: #919191;">$19.99/month</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>

                            <p style="font-size: 0.875rem; color: #919191;">
                                All plans include 16% discount when billed annually. 
                                View detailed pricing and features at <a href="/pricing" style="color: #3DA798;">our pricing page</a>.
                            </p>

                        </div>
                    </div>
                    
                </div>

                <div class="flex justify-center mx-auto my-0 mt-8 rounded-lg p-6 max-w-4xl w-full">
                    <div style="flex justify-center mx-auto my-0  padding: 1.5rem; border-radius: 0.5rem; text-align: center;">
                        <p style="margin: 0; font-size: 0.875rem; color: #919191; font-weight: 500;">
                            Previous Release Notes
                        </p>
                        <p style="margin: 0.5rem 0 0 0; font-size: 0.875rem; color: #919191;">
                            <a href="https://github.com/imprvhub/gitset/releases" target="_blank" rel="noopener noreferrer" 
                               style="color: #3DA798; text-decoration: none; font-weight: 500;">
                                View GitHub Releases →
                            </a>
                        </p>
                    </div>
                </div>

                <br>
                <div class="flex justify-center button-wrapper">
                    <div class="gradient-border">
                        <a href="/"><button
                            class="dark:text-neutral-700 text-sm text-neutral-200 dark:bg-neutral-200 bg-neutral-700 px-6 py-4 rounded-[10px] transition-all duration-300 hover:text-[rgb(91,207,218)] dark:hover:text-[rgb(91,207,218)] cursor-pointer whitespace-nowrap flex items-center justify-center"
                        >
                            Back
                        </button>
                    </a>
                        
                </div>
            </CTA>
            </main>
            <Footer />
          </div>
          
        </div>
    </div>
</Layout>

<style>
    .main-container {
        min-height: 100vh;
        display: flex;
        margin-top: 6rem;
        flex-direction: column;
        justify-content: space-between;
    }

    @media (max-width: 1023px) {
        .container {
            max-width: 100% !important;
            padding-left: 1rem !important;
            padding-right: 1rem !important;
        }
        
        .shadow-lg {
            padding: 1rem !important;
        }
    }
    
    h3 {
        margin-bottom: 1.5rem;
        font-size: 1.5rem;
        font-weight: 700;
        color: #919191;
        border-bottom: 2px solid #3DA798;
        padding-bottom: 0.5rem;
    }

    h4 {
        margin-top: 2rem;
        margin-bottom: 1rem;
        font-size: 1.125rem;
        font-weight: 600;
        color: #919191;
    }

    p {
        margin-top: 0.5rem;
        margin-bottom: 1.5rem;
        line-height: 1.6;
    }

    ul {
        margin-bottom: 1.5rem;
        padding-left: 1.5rem;
    }

    li {
        margin-bottom: 0.75rem;
        line-height: 1.5;
    }

    @media (max-width: 768px) {
        h3 {
            font-size: 1.25rem;
        }

        h4 {
            font-size: 1rem;
            margin-top: 1.5rem;
        }

        p {
            font-size: 0.95rem;
        }
        
        li {
            font-size: 0.95rem;
        }
        
        .prose {
            max-width: none !important;
        }
    }

    @media (max-width: 480px) {
        h3 {
            font-size: 1.125rem;
        }

        h4 {
            font-size: 0.95rem;
        }

        p, li {
            font-size: 0.875rem;
        }
    }

    .top {
        margin-top: 6rem;
    }

    table {
        font-size: 0.875rem;
    }

    .custom-button {
        background-color: #3a9fa8;
        border-color: #fff;
    }

    .cta-button {
        background-color: #59b4aa;
    }
</style>